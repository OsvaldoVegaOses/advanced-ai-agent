# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
ENVIRONMENT=development
DEBUG=True
SECRET_KEY=your-super-secret-key-change-in-production

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/ai_agent_db
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# AZURE OPENAI CONFIGURATION
# =============================================================================
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_VERSION=2024-10-21

# Model Deployments
AZURE_CHAT_DEPLOYMENT=gpt-4o-mini
AZURE_VISION_DEPLOYMENT=gpt-4o-mini
AZURE_AUDIO_DEPLOYMENT=gpt-4o-mini-audio-preview
AZURE_REASONING_DEPLOYMENT=o1
AZURE_FAST_REASONING_DEPLOYMENT=o3-mini
AZURE_EMBEDDINGS_DEPLOYMENT=text-embedding-3-small

# =============================================================================
# VECTOR DATABASE CONFIGURATION
# =============================================================================
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-environment
PINECONE_INDEX_NAME=ai-agent-memory

# =============================================================================
# COMMUNICATION SERVICES
# =============================================================================

# SendGrid (Email)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@yourdomain.com

# Twilio (SMS/WhatsApp)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WHATSAPP_NUMBER=whatsapp:+1234567890

# Slack
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret

# =============================================================================
# CRM INTEGRATIONS
# =============================================================================

# HubSpot
HUBSPOT_API_KEY=your-hubspot-api-key
HUBSPOT_PORTAL_ID=your-hubspot-portal-id

# Salesforce
SALESFORCE_CLIENT_ID=your-salesforce-client-id
SALESFORCE_CLIENT_SECRET=your-salesforce-client-secret
SALESFORCE_USERNAME=your-salesforce-username
SALESFORCE_PASSWORD=your-salesforce-password
SALESFORCE_SECURITY_TOKEN=your-salesforce-security-token

# =============================================================================
# CALENDAR INTEGRATIONS
# =============================================================================

# Google Calendar
GOOGLE_CALENDAR_CREDENTIALS_PATH=/path/to/google-credentials.json
GOOGLE_CALENDAR_ID=your-google-calendar-id

# Calendly
CALENDLY_API_KEY=your-calendly-api-key
CALENDLY_USER_URI=https://api.calendly.com/users/your-user-id

# =============================================================================
# PAYMENT PROCESSING
# =============================================================================

# Stripe
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

# Sentry
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Google Analytics
GA_TRACKING_ID=UA-XXXXXXXXX-X

# =============================================================================
# RATE LIMITING & SECURITY
# =============================================================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# CELERY CONFIGURATION
# =============================================================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0